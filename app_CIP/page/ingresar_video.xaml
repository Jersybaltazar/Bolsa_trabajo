<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_CIP.page.ingresar_video">
    <ScrollView>
        
    
    <StackLayout>
        <Label Text="VIDEO INTERES"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="Medium"
               FontAttributes="Bold"
               Margin="20" />
        <Entry x:Name="tituloText"
               Placeholder="Ingrese titulo del video"
               Keyboard="Text" />
        <Entry x:Name="linkText"
               Placeholder="link de video"
               Keyboard="Url" />
        <StackLayout>
            <Button Text="GUARDAR"
                    HorizontalOptions="Center"
                    Margin="25"
                    Clicked="videoguardarClicked" />
        </StackLayout>
    </StackLayout>
    </ScrollView>
</ContentPage>