<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_CIP.page.Registrar_sugerencia">
    <ScrollView>
        <StackLayout Margin="20"
                     Spacing="10">
            <Label Text="SUGERENCIAS"
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   TextColor="Black" />
            <StackLayout Margin="20">
                <Label Text="REGISTRO SU SUGERENCIA:"
                       Margin="10" />
                <Frame BorderColor="Black"
                       CornerRadius="10">
                    <Entry x:Name="suger"
                           Placeholder="sugerencia"
                           Keyboard="Chat" />
                </Frame>
                <StackLayout Orientation="Horizontal"
                             Margin="10">
                    <CheckBox x:Name="miCheckBox" />
                    <Label Text="CONTACTAME" />
                </StackLayout>
            </StackLayout>
            <Button Text="ENVIAR"
                    Clicked="button_registrar_Clicked"
                    HeightRequest="60"
                    WidthRequest="60" />
        </StackLayout>
    </ScrollView>
</ContentPage>